{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local"
            }
        ]
    },
    "globals": {
        "Datepicker": "readonly",
        "months_short": "readonly",
        "WEEK": "readonly",
        "DAY": "readonly",
        "HOUR": "readonly",
        "MINUTE": "readonly"
    }
}