{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "p5js"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": [
            "warn"
        ],
        "no-constant-condition": [
            "off"
        ],
        "no-undef": [
            "warn"
        ],
        "no-unused-vars": [
            "warn",
            {
                "vars": "local"
            }
        ],
        "no-useless-escape": [
            "off"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}