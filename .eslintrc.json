{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["warn", "unix"],
        "quotes": ["warn", "double"],
        "semi": ["error", "always"],
        "no-unused-vars": [
            "warn",
            {
                "vars": "local"
            }
        ],
        "no-trailing-spaces": ["warn"]
    },
    "globals": {
        "Datepicker": "readonly",
        "months_short": "readonly",
        "WEEK": "readonly",
        "DAY": "readonly",
        "HOUR": "readonly",
        "MINUTE": "readonly"
    }
}
