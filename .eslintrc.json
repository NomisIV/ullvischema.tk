{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "p5js"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": [
            "warn"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local"
            }
        ]
    },
    "globals": {
        "Datepicker": "readonly",
        "months_short": "readonly",
        "WEEK": "readonly",
        "DAY": "readonly",
        "HOUR": "readonly",
        "MINUTE": "readonly"
    }
}